generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    id          String   @id @default(uuid())
    name        String
    description String?
    price       Decimal  @db.Decimal(10, 2)
    images      String[] @default([])
    attributes  Json?

    created_at DateTime @default(now())
    updated_at DateTime @updatedAt

    @@map("products")
}
